<% /* Navbar Partial â€“ views/partials/navbar.ejs */ %>

<nav class="navbar bg-base-100 px-4">
  <!-- Logo/Title -->
  <div class="flex-1">
    <a href="/" class="btn btn-ghost normal-case text-xl <%= page==='/' ? 'active' : '' %>">My Projects</a>
  </div>

  <!-- Desktop menu -->
  <div class="flex-none hidden lg:block">
    <ul class="menu menu-horizontal p-0">
      <li><a href="/" class="<%= page==='/' ? 'active' : '' %>">Home</a></li>
      <li><a href="/about" class="<%= page==='/about' ? 'active' : '' %>">About</a></li>
      <li><a href="/solutions/projects" class="<%= page==='/solutions/projects' ? 'active' : '' %>">View Projects</a></li>
      <li><a href="/solutions/addProject" class="<%= page === '/solutions/addProject' ? 'active' : '' %>"> Add Project </a></li>
    </ul>
  </div>

  <!-- Mobile menu toggle -->
  <div class="flex-none lg:hidden">
    <button id="nav-toggle" class="btn btn-square btn-ghost">
      <!-- Menu icon -->
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>
</nav>

<!-- Mobile menu -->
<div id="nav-menu" class="hidden bg-base-100 lg:hidden">
  <ul class="menu p-2">
    <li><a href="/" class="<%= page==='/' ? 'active' : '' %>">Home</a></li>
    <li><a href="/about" class="<%= page==='/about' ? 'active' : '' %>">About</a></li>
    <li><a href="/solutions/projects" class="<%= page==='/solutions/projects' ? 'active' : '' %>">View Projects</a></li>
  </ul>
</div>

<script>
  // Toggle mobile menu visibility
  document.getElementById('nav-toggle').addEventListener('click', () => {
    document.getElementById('nav-menu').classList.toggle('hidden');
  });
</script>
